{% extends 'base.html.twig' %}

{% block body %}
  <div class="row offset-top">
    <div class="col-12">
      <h1>Welkom</h1>
      <p>Ik ben een webshop. Koop dingen!</p>
    </div>
  </div>
  <div class="row offset-top">
    {% for product in products %}
    <div class="col-sm-12 col-md-4 offset-top">
      <img src="/build/img/rubiks.jpeg" class="rounded-circle productlist-customer__thumbnail"/>
      <p>{{ product.getName() }}</p>
      <p>&euro;{{ product.getPrice() }}</p>
      <a href="/cart/add/{{product.getId()}}" class="btn btn-primary">Koop</a>
    </div>
    {% endfor %}
  </div>
{% endblock %}
